QMainWindow {
    background-color: #f5f5f5;
}

QTreeView {
    font-size: 13px;
    alternate-background-color: #f0f4f8;
}

QTreeView::item:selected {
    background-color: #1565C0;
    color: white;
}

QGroupBox {
    font-weight: bold;
    border: 1px solid #cccccc;
    border-radius: 4px;
    margin-top: 8px;
    padding-top: 16px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 4px;
}
